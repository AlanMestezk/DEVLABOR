<div id="top-container" class="container-fluid">
        <h1 id="main-title" class="text-center">Aqui aqui você encontra o emprego dos seus sonhos</h1>
        <p id="main-subtitle" class="text-center">Somos o melhor site de vagas para desenvolvedores</p>

        <form id="search-form" class="form-check-inline" action="/" method="get">
            <div class="form-group col-md-10">

                <input type="text" class="form-control" id="job" name="job" placeholder="Digite a vaga que esta buscando...">

            </div>

            <div class="col-md-2">

                <button type="submit" class=" btn btn-primary">
                    Buscar
                </button>

            </div>
        </form>
    </div>

    <main>
        <div id="jobs-container" class="container">

            <div class="row">
                <div class="col-md-12">
                    {{#if search }}
                         <h2 id="job-list-title">Buscando a vaga que contem: {{search}}</h2>
                    {{else}}
                        <h2 id="job-list-title">Veja as vagas que estão em destaque</h2>
                    {{/if}}
                    <ul id="job-list" class="list-group">
                        {{#each jobs}}
                        <li class="list-group-item {{#if dataValues.new_job }}new-job{{/if}}">
                            <img src="/img/devlaborLogo.png" alt="company">
                            <p>{{dataValues.company}}</p>
                            <h2>{{dataValues.title}}</h2>
                            <p>R$ {{dataValues.salary}}</p>
                            <span class="new-job-label">Nova</span>
                            <a class="btn btn-primary" href="/jobs/view/{{dataValues.id}}">Ver vaga</a>
                        </li>
                        {{/each}}
                    </ul>

                </div>
            </div>

        </div>
    </main>